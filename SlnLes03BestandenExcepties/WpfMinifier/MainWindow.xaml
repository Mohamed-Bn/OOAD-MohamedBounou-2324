<Window x:Class="WpfMinifier.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MINIFIER" Height="450" Width="800">
    <Grid>
        <Label Content="Startmap:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="pathTextBox" HorizontalAlignment="Left" Height="25" Margin="75,15,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button Content="Selecteer..." HorizontalAlignment="Left" Margin="200,15,0,0" VerticalAlignment="Top" Width="75" Click="SelectFolder_Click"/>
        <Label Content="Files:" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top"/>
        <ListBox x:Name="fileListBox" HorizontalAlignment="Left" Height="100" Margin="10,65,0,0" VerticalAlignment="Top" Width="705"/>
        <Button Content="Minify" HorizontalAlignment="Left" Margin="10,170,0,0" VerticalAlignment="Top" Width="75" Click="Minify_Click"/>
        <Button Content="Minify als..." HorizontalAlignment="Left" Margin="90,170,0,0" VerticalAlignment="Top" Width="75" Click="MinifyAs_Click"/>
    </Grid>
</Window>
