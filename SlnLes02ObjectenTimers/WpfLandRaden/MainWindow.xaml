<Window x:Class="WpfLandRaden.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfLandRaden"
        mc:Ignorable="d"
        Title="Landenkwis" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Image Source="Images/brazilie.png" Width="100" Height="75" Tag="Brazilië" MouseUp="Image_MouseUp"/>
            <Image Source="Images/argentina.png" Width="100" Height="75" Tag="Argentina" MouseUp="Image_MouseUp"/>
            <Image Source="Images/canada.png" Width="100" Height="75" Tag="Canada" MouseUp="Image_MouseUp"/>
            <Image Source="Images/finland.png" Width="100" Height="75" Tag="Finland" MouseUp="Image_MouseUp"/>
            <Image Source="Images/india.png" Width="100" Height="75" Tag="India" MouseUp="Image_MouseUp"/>
        </StackPanel>

        <Label x:Name="resultLabel" Content="" FontSize="18" Margin="25,275,10,90"/>
        <Button Content="START" Margin="35,325,555,55" Click="StartButton_Click"/>
        <TextBlock x:Name="startText" Text="Raad zo snel mogelijk alle landen! Ben je klaar?" FontSize="16" Margin="35,280,0,110"/>
    </Grid>
</Window>
