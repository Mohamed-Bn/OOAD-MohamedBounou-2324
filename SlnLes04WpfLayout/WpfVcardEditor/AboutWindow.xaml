        <TextBlock HorizontalAlignment="Left" FontSize="16" Margin="30,5,0,5"><Bold>Vak:</Bold> OO Application Development</TextBlock>
        <TextBlock HorizontalAlignment="Left" FontSize="16" Margin="30,5,0,5"><Bold>Academiejaar:</Bold> 2023 - 2024</TextBlock>
        <Button x:Name="btnSluiten" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="16" Margin="40" Padding="15,5" Click="Sluiten_Click">SLUITEN</Button>
    </StackPanel>
</Window>
